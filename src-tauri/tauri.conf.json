{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "mkdedit",
  "version": "1.0.5",
  "identifier": "com.appurist.mkdedit",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Markdown Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "mimeType": "text/markdown",
        "description": "Markdown Document"
      }
    ],
"linux": {
      "deb": {
        "desktopTemplate": "desktop-template.desktop"
      }
    }
  }
}
